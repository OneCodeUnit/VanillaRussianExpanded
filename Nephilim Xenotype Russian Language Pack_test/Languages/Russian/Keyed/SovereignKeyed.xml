  <!-- EN: Consume grace below -->
  <ConsumeGraceBelow>Использовать благодать, когда она ниже</ConsumeGraceBelow>
  <!-- EN: Never consume grace. -->
  <NeverConsumeGrace>Никогда не использовать благодать.</NeverConsumeGrace>

